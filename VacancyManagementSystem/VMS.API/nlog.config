<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  autoReload="true"
      internalLogLevel="Info"
      internalLogFile="../logs/internal.log">
	<!-- the targets to write -->
	<targets>
		<!-- write to file -->
		<target xsi:type="File" name="trace" fileName="d:/DZHosts/LocalUser/vms/www.vms.somee.com/logs/trace-${shortdate}.log"
            layout="${date}|${level:uppercase=true}|${message} ${exception}|${logger}|${all-event-properties}" />
		<target xsi:type="File" name="info" fileName="d:/DZHosts/LocalUser/vms/www.vms.somee.com/logs/info-${shortdate}.log"
				layout="${date}|${level:uppercase=true}|${message} ${exception}|${logger}|${all-event-properties}" />
		<target xsi:type="File" name="error" fileName="d:/DZHosts/LocalUser/vms/www.vms.somee.com/logs/error-${shortdate}.log"
				layout="${date}|${level:uppercase=true}|${message} ${exception}|${logger}" />

	</targets>
	<!-- rules to map from logger name to target -->
	<rules>
		<logger name="*" minlevel="Info" writeTo="info" />
		<logger name="*" minlevel="Trace" writeTo="trace" />
		<logger name="*" minlevel="Error" writeTo="error" />
	</rules>
</nlog>
